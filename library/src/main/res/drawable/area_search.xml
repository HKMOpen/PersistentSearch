<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp">

        <shape android:shape="rectangle">

            <gradient
                android:angle="90"
                android:centerColor="#e5e5e5"
                android:centerY="0.85"
                android:endColor="#e8e8e8"
                android:startColor="#dcdcdc"
                android:type="linear" />

            <corners android:radius="20dp" />

            <stroke
                android:width="2px"
                android:color="#f2f2f2" />

        </shape>
    </item>
</layer-list>